<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<BorderPane fx:id="background" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.au.cpsc.module7.controller.TimerController">
   <center>
      <VBox prefHeight="640.0" prefWidth="800.0">
         <children>
            <TextFlow prefHeight="502.0" prefWidth="800.0" textAlignment="CENTER">
               <children>
                  <Circle fx:id="ring" fill="#1f93ff00" radius="198.0" stroke="#f3b7ff87" strokeType="OUTSIDE" strokeWidth="15.0" translateX="172.0" />
                  <Text fx:id="timeText" strokeType="OUTSIDE" strokeWidth="0.0" text="00:00:00" textAlignment="CENTER" translateX="-212.0" translateY="-180.0" wrappingWidth="215.7890625">
                     <font>
                        <Font name="Verdana" size="72.0" />
                     </font>
                  </Text>
               </children>
               <padding>
                  <Insets bottom="5.0" top="50.0" />
               </padding>
            </TextFlow>
            <HBox alignment="CENTER" prefHeight="73.0" prefWidth="800.0">
               <children>
                  <ToggleButton fx:id="start" mnemonicParsing="false" onMouseClicked="#onStartClick" text="Start">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </ToggleButton>
                  <Button fx:id="reset" mnemonicParsing="false" onMouseClicked="#onResetClick" text="Reset">
                     <HBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="edit" mnemonicParsing="false" onMouseClicked="#onEditClick" text="Edit">
                     <HBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </HBox.margin>
                  </Button>
                  <CheckBox mnemonicParsing="false" text="Alarm Sound">
                     <padding>
                        <Insets left="5.0" />
                     </padding>
                  </CheckBox>
               </children>
            </HBox>
            <BorderPane>
               <center>
                  <HBox alignment="CENTER" prefHeight="32.0" prefWidth="800.0">
                     <children>
                        <ColorPicker fx:id="backgroundPicker" editable="true" onAction="#backgroundPicked">
                           <HBox.margin>
                              <Insets right="5.0" />
                           </HBox.margin>
                        </ColorPicker>
                        <ColorPicker fx:id="ringColorPicker" editable="true" onAction="#ringColorPicked">
                           <HBox.margin>
                              <Insets left="5.0" right="5.0" />
                           </HBox.margin>
                           <value>
                              <Color red="0.9529411792755127" green="0.7176470756530762" blue="1.0" />
                           </value>
                        </ColorPicker>
                        <ColorPicker fx:id="innerCircleColorPicker" onAction="#innerCircleColorPicked" />
                     </children>
                  </HBox>
               </center>
               <top>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Configure Background, Ring, and Inner Circle Color" textAlignment="CENTER" wrappingWidth="368.34375" BorderPane.alignment="CENTER" />
               </top>
            </BorderPane>
         </children>
      </VBox>
   </center>
   <top>
      <MenuBar prefHeight="26.0" prefWidth="800.0" useSystemMenuBar="true" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Menu">
            <items>
              <MenuItem mnemonicParsing="false" text="Start">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="F1" control="UP" meta="UP" shift="UP" shortcut="ANY" />
                     </accelerator>
                  </MenuItem>
                  <MenuItem mnemonicParsing="false" text="Reset">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="F2" control="UP" meta="UP" shift="UP" shortcut="ANY" />
                     </accelerator>
                  </MenuItem>
                  <MenuItem mnemonicParsing="false" text="Edit">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="F3" control="UP" meta="UP" shift="UP" shortcut="ANY" />
                     </accelerator>
                  </MenuItem>
                  <MenuItem mnemonicParsing="false" text="Close">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="F8" control="UP" meta="UP" shift="UP" shortcut="ANY" />
                     </accelerator>
                  </MenuItem>
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
